<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <moralnorm.springback.view.SpringBackLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:scrollableView="@android:id/list"
        android:layout_weight="1">

        <moralnorm.recyclerview.widget.RecyclerView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </moralnorm.springback.view.SpringBackLayout>

    <moralnorm.appcompat.widget.dialog.DialogButtonPanel
        style="?android:buttonBarStyle"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:measureWithLargestChild="true"
        android:paddingStart="@dimen/appcompat_dialog_button_panel_margin_horizontal"
        android:paddingEnd="@dimen/appcompat_dialog_button_panel_margin_horizontal"
        android:paddingTop="20dp">

        <Button
            android:id="@android:id/button2"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_weight="1"
            style="?android:buttonBarNegativeButtonStyle" />

        <Button
            android:id="@android:id/button1"
            android:text="@android:string/ok"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_weight="1"
            style="?android:buttonBarPositiveButtonStyle" />

    </moralnorm.appcompat.widget.dialog.DialogButtonPanel>

</LinearLayout>